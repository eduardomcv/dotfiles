[user]
    email = eduardomcv42@gmail.com
    name = Eduardo Vicente
[core]
    editor = nvim
    autocrlf = input
    longpaths = true
[pull]
    rebase = false
[color]
    ui = auto
[alias]
    clean = "!f() { git remote prune origin; git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -d; }; f"
    ch = checkout
    branches = branch -a
    remotes = remote -v
    # View history graph
    graph = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    # View abbreviated SHA, description, and history graph of the latest 20 commits
    ll = log --pretty=oneline -n 20 --graph --abbrev-commit
    up = push -u origin HEAD
