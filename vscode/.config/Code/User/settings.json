{
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "window.titleBarStyle": "custom",
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.multiCursorModifier": "alt",
    "editor.renderWhitespace": "boundary",
    "explorer.confirmDragAndDrop": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "telemetry.enableTelemetry": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__generated__": true,
        "**/__pycache__": true,
    },
    // TODO tree
    "todo-tree.general.statusBar": "current file",
    "todo-tree.general.tags": [
        "DELETEME",
        "FIXME",
        "HACK",
        "TODO",
        "WIP",
    ],
    "todo-tree.highlights.customHighlight": {
        "DELETEME": {
            "icon": "trash",
            "foreground": "#ff0000",
            "background": "#ff0000",
            "iconColor": "#ff0000",
            "rulerColour": "#ff0000",
            "opacity": 15,
            "gutterIcon": true,
        },
        "FIXME": {
            "icon": "tools",
            "foreground": "#fff400",
            "background": "#fff400",
            "iconColor": "#fff400",
            "rulerColour": "#fff400",
            "opacity": 15,
            "gutterIcon": true,
        },
        "HACK": {
            "icon": "alert",
            "foreground": "#00f9ff",
            "background": "#00f9ff",
            "iconColor": "#00f9ff",
            "rulerColour": "#00f9ff",
            "opacity": 15,
            "gutterIcon": true,
        },
        "TODO": {
            "icon": "checklist",
            "foreground": "#ed00ff",
            "background": "#ed00ff",
            "iconColor": "#ed00ff",
            "rulerColour": "#ed00ff",
            "opacity": 15,
            "gutterIcon": true,
        },
        "WIP": {
            "icon": "hourglass",
            "foreground": "#ff7C00",
            "background": "#ff7C00",
            "iconColor": "#ff7C00",
            "rulerColour": "#ff7C00",
            "opacity": 15,
            "gutterIcon": true,
        },
    },
}
