let mapleader=" "

syntax on
set background=dark

filetype plugin on
filetype indent on

set nocompatible
set encoding=utf8
set mouse=a
set clipboard+=unnamedplus,unnamed

set nobackup
set nowritebackup
set noswapfile

set tabstop=4
set shiftwidth=4
set softtabstop=4

set number
set relativenumber
set laststatus=2

set expandtab
set smarttab
set shiftround
set autoindent
set smartindent
set wrap

set hidden
set autoread

set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
